.chat_main
  .chat_main__group_info
    .chat_main__group_info__left_box
      %h2.group 
        = @group.name

      .chat_main__group_info__left_box__member_list
        %ul.members Member : 
        %li member1
    .chat_main__group_info__edit_btn
      = link_to "Edit" , "#" ,class: "edit_btn" 

  .chat_main__message_list
    .messages
      = render @messages

    .chat_main__message_list__messages
      .chat_main__message_list__messages__upper_info
        %p.talker user_nameï¼’
        %p.date 2020/04/08(Wed) 12:12:12
